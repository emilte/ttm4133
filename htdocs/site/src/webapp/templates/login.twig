{% extends 'base.twig' %}

{% block head %}
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
{% endblock %}

{% block content %}

    <h2>Login</h2>

    {{ flash.error|raw }} <br />

    <form action="" method="POST">
        <label>Username:</label>
        <input required type="text" name="username" value="{{ last_username }}"> <br />

        <label>Password: </label>
        <input required type="password" name="password"> <br />

        <div class="g-recaptcha" data-sitekey="6LdfnpkUAAAAAJLy-8C81Y6mwBnbuY9FXp4B1X-W"></div>

        <input type="submit" name="submit" value="Log in">
    </form>
{% endblock %}
